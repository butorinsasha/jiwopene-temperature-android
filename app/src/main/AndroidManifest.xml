<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.jiwopene.temperature">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:fullBackupContent="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TemperaturesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SensorActivity"
            android:parentActivityName=".TemperaturesActivity" />

        <service
            android:name=".TemperatureLogService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".TemperatureLogSettingsActivity" android:parentActivityName=".TemperatureLogActivity" />
        <activity android:name=".TemperatureLogActivity" android:parentActivityName=".TemperaturesActivity" />
        <receiver android:name=".OnBootTemperatureLogServiceStarter">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>